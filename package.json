{
  "name": "uyap-asistan",
  "version": "1.0.0",
  "description": "UYAP Asistan - Desktop application converted from IMEREK Chrome Extension",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "UYAP",
    "Turkey",
    "Legal",
    "Lawyer",
    "Assistant",
    "Desktop",
    "Electron"
  ],
  "author": "D10NYS0S-prog",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.imerek.uyap-asistan",
    "productName": "UYAP Asistan",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/extension/style/img/icons/icon128.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/extension/style/img/icons/icon128.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/extension/style/img/icons/icon128.png"
    }
  }
}
